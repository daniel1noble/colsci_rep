@article{raychoudhury_modes_2009-1,
	title = {{MODES} {OF} {ACQUISITION} {OF} {WOLBACHIA}: {HORIZONTAL} {TRANSFER}, {HYBRID} {INTROGRESSION}, {AND} {CODIVERGENCE} {IN} {THE} {NASONIA} {SPECIES} {COMPLEX}},
