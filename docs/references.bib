@article{row_assortative_2011,
	title = {{ASSORTATIVE} {MATING} {IN} {RELATION} {TO} {PLUMAGE} {TRAITS} {SHARED} {BY} {MALE} {AND} {FEMALE} {AMERICAN} {ROBINS}},
	volume = {113},
