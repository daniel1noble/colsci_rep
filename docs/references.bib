@article{spaethe_molecular_2005,
	title = {Molecular characterization and expression of the {UV} opsin in bumblebees: three ommatidial subtypes in the retina and a new photoreceptor organ in the lamina},
	volume = {208},
	shorttitle = {Molecular characterization and expression of the {UV} opsin in bumblebees: three ommatidial subtypes in the retina and a new photoreceptor organ in the lamina},
