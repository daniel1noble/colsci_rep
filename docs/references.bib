@article{bortolotti_carotenoid_2003,
	title = {Carotenoid concentration and coloration of American Kestrels (Falco sparverius) disrupted by experimental exposure to {PCBs}},
	volume = {17},
	issn = {0269-8463},
	shorttitle = {Carotenoid concentration and coloration of American Kestrels (Falco sparverius) disrupted by experimental exposure to {PCBs}},
