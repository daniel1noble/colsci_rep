}

@article{germano_ontogenetic_2007,
	title = {Ontogenetic and seasonal changes in coloration of the blunt-nosed leopard lizard (Gambelia sila)},
	volume = {52},
	issn = {0038-4909},
	shorttitle = {Ontogenetic and seasonal changes in coloration of the blunt-nosed leopard lizard (Gambelia sila)},
