	journal = {Evolution},
	author = {Parra, J. L.},
	month = feb,
	year = {2010},
	pages = {324--335}
}

@article{devistuartfox_natural_2007,
	title = {Natural Selection on Social Signals: Signal Efficacy and the Evolution of Chameleon Display Coloration},
	volume = {170},
