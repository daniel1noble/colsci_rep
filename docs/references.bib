@article{baiao_maintenance_2008,
	title = {{MAINTENANCE} {OF} {PLUMAGE} {POLYMORPHISM} {IN} {RED}-{FOOTED} {BOOBIES} {IN} {THE} {GALAPAGOS} {ARCHIPELAGO}: {OBSERVATIONS} {OF} {MATE} {CHOICE} {AND} {HABITAT} {ASSOCIATION}},
