@article{weiss_pterin-based_2011,
	title = {Pterin-based ornamental coloration predicts yolk antioxidant levels in female striped plateau lizards (Sceloporus virgatus)},
	volume = {80},
	issn = {0021-8790},
	shorttitle = {Pterin-based ornamental coloration predicts yolk antioxidant levels in female striped plateau lizards (Sceloporus virgatus)},
