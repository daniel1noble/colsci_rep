@article{silberglied_ultraviolet_1978,
	title = {Ultraviolet Reflection and Its Behavioral Role in the Courtship of the Sulfur Butterflies Colias eurytheme and C. philodice (Lepidoptera, Pieridae)},
	volume = {3},
	issn = {03405443},
