@article{johnson_comparison_2007,
	title = {A comparison of photographic analyses used to quantify zooxanthella density and pigment concentrations in Cnidarians},
	volume = {353},
	issn = {0022-0981},
	shorttitle = {A comparison of photographic analyses used to quantify zooxanthella density and pigment concentrations in Cnidarians},
