	journal = {Molecular Biology and Evolution},
	author = {Klasson, Lisa and Walker, Thomas and Sebaihia, Mohammed and Sanders, Mandy J. and Quail, Michael A. and Lord, Angela and Sanders, Susanne and Earl, Julie and O'Neill, Scott L. and Thomson, Nicholas and Sinkins, Steven P. and Parkhill, Julian},
