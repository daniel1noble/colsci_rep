	month = may,
	year = {2009},
	pages = {1046--1056}
}

@article{giordano_role_1997,
	title = {The role of Wolbachia bacteria in reproductive incompatibilities and hybrid zones of Diabrotica beetles and Gryllus crickets},
	volume = {94},
	issn = {0027-8424},
