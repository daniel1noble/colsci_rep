@article{blagrove_wolbachia_2012,
	title = {Wolbachia strain {wMel} induces cytoplasmic incompatibility and blocks dengue transmission in Aedes albopictus},
	volume = {109},
	shorttitle = {Wolbachia strain {wMel} induces cytoplasmic incompatibility and blocks dengue transmission in Aedes albopictus},
